header
  width 100%
  height 50px
  background main-color
  position fixed
  z-index 5
  opacity(0.92)
  @extends .grid-between

#logo
  width 96px
  height 33px
  margin 7px 0 0 12px
  img
    width 100%
  @media (min-width: em(800px))
    width 133px
    height 46px

.menu-principal
  width 100%
  position fixed
  background main-color
  z-index 5
  bottom 0

.menu-lista
  display flex
  justify-content space-between

.menu-item
  width 25%
  height 48px
  text-align center

.menu-item-icon
  margin 6px 0 3px 0
  img
    width 100%

.icon-portfolio
  width 26px

.icon-sobre
  width 18px

.icon-contato
  width 26px

.icon-blog
  width 21px
  margin-top 8px

.menu-item-link
  display block
  height 47px
  font-size rem(12px)
  color #FFF
  line-height 45px
  display flex
  justify-content center
  border-top 3px solid main-color
  transition(all, 0.2s, linear)

.menu-item-label
  @extends .menu-item-link
  margin-left 3px

.active
  border-top 5px solid #EEE
  transition(all, 0.2s, linear)
