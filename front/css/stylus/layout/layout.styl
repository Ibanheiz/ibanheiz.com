header
  width 100%
  height 50px
  background main-color
  position fixed
  z-index 5
  opacity(0.92)
  @extends .grid-between

#logo
  width 96px
  height 33px
  margin 7px 0 0 12px
  img
    width 100%
  @media (min-width: em(800px))
    width 133px
    height 46px

.menu-principal
  width 100%
  position fixed
  background main-color
  z-index 5
  bottom 0

.menu-lista
  display flex
  justify-content space-between
  li
    width 25%
    height 45px
    text-align center
    a
      display block
      height 45px
      font-size rem(15px)
      color #FFF
      line-height 45px