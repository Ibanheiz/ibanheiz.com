.modal-portfolio-container-background
  width 100%
  height 100%
  position fixed
  background #000
  opacity 0.95
  top 0
  left 0
  z-index 90

.modal-portfolio-container
  width 100%
  height 100%
  background #FFF
  position fixed
  transition all linear 0.5s
  z-index 100
  padding 2%
  overflow-y auto
  @media (min-width: em(800px))
    width 90%
    height 90%
    top 5%
    left 5%

.modal-portfolio-container.ng-hide
  opacity 0
  transition all linear 0.5s

.modal-close
  font-family verdana
  cursor pointer
  font-size rem(30px)
  color #FFF
  position fixed
  top 0
  right 12px
  color #EEE
  z-index 1000
  @media (min-width: em(800px))
    width 35px
    height 35px
    font-size rem(23px)
    top 18px
    right 22px
    position fixed
    border-radius 50%
    text-align center
    border 2px solid #FFF

.modal-header-grid
  width 100%
  @media (min-width: em(800px))
    height 165px
    display flex
    justify-content space-between
    position relative

.modal-header-titulo-container
  width 100%
  background main-color
  padding 3%
  color #FFF
  text-align center
  @media (min-width: em(800px))
    padding 2% 2%

.modal-header-titulo
  width 100%
  font-size rem(35px)
  @media (min-width: em(800px))
    font-size rem(55px)

.modal-header-descricao
  width 100%
  font-size rem(20px)

.modal-header-sobre-container
  width 100%
  height 50px
  margin-top 5px
  @media (min-width: em(800px))
    height 60px
    margin-top 0
    width 50%

.modal-header-sobre-titulo
  font-size rem(20px)
  color main-color
  @media (min-width: em(800px))
    font-size rem(40px)

.modal-header-sobre-descricao
  font-size rem(15px)
  color #333
  @media (min-width: em(800px))
    font-size rem(17px)
  @media (min-width: em(1024px))
    font-size rem(20px)

.modal-header-sobre-grid
  width 90%
  display flex
  position absolute
  justify-content space-between
  flex-direction row-reverse
  @media (min-width: em(800px))
    margin-top 10px
    width 95%

.modal-header-sobre-link-grid
  display flex
  justify-content flex-start
  a
    margin-top 5px

.modal-header-sobre-link-icon
  padding-top 2px

.modal-header-sobre-link
  color main-color
  margin-left 10px
  transition(all, 0.2s, linear)
  @media (min-width: em(800px))
    margin-left 6px
    margin-top 3px

.modal-header-sobre-link:hover
  color main-strong-color
  transition(all, 0.2s, linear)
  text-decoration underline

.modal-header-sobre-andamento
  margin-top 5px
  right 0

.modal-portfolio-imagens-item
  width 100%
  margin-top 5px

.modal-portfolio-imagens-container
  width 96%
  bottom 0
  overflow-y auto
  border-top 3px solid main-color
  padding-top 20px
  @media (min-width: em(800px))
    width 100%

.modal-portfolio-item-divisor
  width 100%
  height 3px
  background main-color
  margin 40px 0
