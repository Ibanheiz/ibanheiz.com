.modal-portfolio-container-background
  width 100%
  height 100%
  position fixed
  background #000
  opacity 0.98
  top 0
  left 0
  z-index 90
  transition: all linear 0.5s;
  @media (min-width: em(800px))
    opacity 0.95

.modal-portfolio-container-background.ng-hide {
  opacity 0
  transition all linear 0.5s
}

.modal-portfolio-container
  width 100%
  height 100%
  background #FFF
  position fixed
  transition all linear 0.5s
  z-index 100
  padding 3.5%
  overflow-y auto
  @media (min-width: em(800px))
    width 90%
    height 90%
    top 5%
    left 5%

.modal-portfolio-container.ng-hide
  opacity 0
  transition all linear 0.5s

.modal-close
  width 27px
  height 27px
  font-family verdana
  cursor pointer
  line-height 20px
  font-size rem(20px)
  position fixed
  top 5px
  right 12px
  color main-color
  z-index 1000
  border 2px solid main-color
  border-radius 50%
  text-align center
  @media (min-width: em(800px))
    width 35px
    height 35px
    line-height 27px
    top 18px
    right 22px
    position fixed
    border 2px solid #FFF
    color #FFF

.modal-header-grid
  width 100%
  @media (min-width: em(800px))
    height 165px
    display flex
    justify-content space-between
    position relative

.modal-header-titulo-container
  width 100%
  padding 0
  color #FFF

.modal-header-titulo
  width 100%
  font-size rem(35px)
  color main-strong-color
  @media (min-width: em(800px))
    font-size rem(55px)

.modal-header-subtitulo
  width 100%
  font-size rem(20px)
  color main-strong-color
  @media (min-width: em(800px))
    font-size rem(25px)

.modal-header-descricao
  width 100%
  font-size rem(16px)
  color text-color
  margin-top 10px
  @media (min-width: em(800px))
    font-size rem(18px)
  a
    color main-strong-color
    text-decoration none
  a:hover
    text-decoration underline

.modal-header-sobre-container
  width 100%
  height 50px
  margin-top 5px
  @media (min-width: em(800px))
    height 60px
    margin-top 0
    width 50%

.modal-header-sobre-titulo
  font-size rem(20px)
  color main-color
  @media (min-width: em(800px))
    font-size rem(40px)

.modal-header-sobre-descricao
  font-size rem(15px)
  color text-color
  @media (min-width: em(800px))
    font-size rem(17px)
  @media (min-width: em(1024px))
    font-size rem(18px)

.modal-header-sobre-grid
  width 90%
  @media (min-width: em(800px))
    margin-top 10px
    width 92%
    display flex
    position absolute
    justify-content space-between

.modal-header-sobre-link-grid
  display flex
  justify-content flex-start
  a
    margin-top 5px

.modal-header-sobre-link-icon
  padding-top 2px

.modal-header-sobre-link
  color main-color
  margin-left 10px
  transition(all, 0.2s, linear)
  @media (min-width: em(800px))
    margin-left 6px
    margin-top 3px

.modal-header-sobre-link:hover
  color main-strong-color
  transition(all, 0.2s, linear)
  text-decoration underline

.modal-header-sobre-andamento
  margin-top 5px
  right 0
  font-family myriad pro
  color main-strong-color

.modal-portfolio-imagens-item
  width 100%
  margin-top 5px
  border 1px solid main-color

.modal-portfolio-imagens-container
  width 96%
  bottom 0
  overflow-y auto
  border-top 3px solid main-color
  padding-top 20px
  margin-top 20px
  @media (min-width: em(800px))
    width 100%

.modal-portfolio-item-divisor
  width 100%
  height 3px
  background main-color
  margin 40px 0
