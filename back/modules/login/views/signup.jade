h1 Cadastre-se no Mean Seed

div.form
  form(name="form_signup", data-ng-submit="createUser(user)")
    div.column-label
      label(for="username") Usu√°rio
    div.column-input
      input(type="text", name="username", data-ng-model="user.username", required)
    div.column-label
      label(for="email") Email
    div.column-input
      input(type="email", name="email", data-ng-model="user.email", required)
    div.column-label
      label(for="password") Senha
    div.column-input
      input(type="password", name="password", data-ng-model="user.password", required)
    div.column-label
      label(for="confirmPassword") Confirmar senha
    div.column-input
      input(type="password", name="confirmPassword", data-ng-model="user.confirmPassword", required)
    div.button-container-signup
      input.button-signup(type="submit", value="Cadastrar")

include ../../main/views/modal
div.default-link
  a(href='/mean-seed/login/') Voltar
div {{status}}